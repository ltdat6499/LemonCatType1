@model LemonCat.Areas.Admin.Models.LoginModel
@{
    Layout = null;
}

<!doctype html>
<html class="no-js " lang="en">


<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <meta name="description" content="Responsive Bootstrap 4 and web Application ui kit.">

    <title>LemonCat Admin Sign In</title>
    <!-- Favicon-->
    <link rel="icon" href="~/Areas/Admin/favicon.ico" type="image/x-icon">
    <!-- Custom Css -->
    <link href="~/Areas/Admin/assets/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/assets/css/style.min.css" rel="stylesheet" />
</head>

<body class="theme-blush">

    <div class="authentication">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-sm-12">
                    <div class="card auth_form">
                        <div class="header">
                            <img class="logo" src="~/Areas/Admin/assets/images/logo.svg" alt="">
                            <h5>Log in</h5>
                        </div>

                        @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                        {
                            <div class="body">
                                @Html.ValidationSummary(false, "", "error")
                                <div class="input-group mb-3">
                                    @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @autofocus = "autofocus", @placeholder = "Username" })

                                    <div class="input-group-append">
                                        <span class="input-group-text"><a href="#" title=""><i class="zmdi zmdi-account-circle"></i></a></span>
                                    </div>
                                </div>
                                <div class="input-group mb-3">
                                    @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = "Password" })

                                    <div class="input-group-append">
                                        <span class="input-group-text"><a href="/Admin/Login/SendPasswordToEmail" class="forgot" title="Forgot Password"><i class="zmdi zmdi-lock"></i></a></span>
                                    </div>
                                </div>
                                <div class="checkbox">
                                    <input name="remember_me" id="remember_me" type="checkbox">
                                    <label for="remember_me">Remember Me</label>
                                </div>
                                <button type="submit" class="btn btn-primary btn-block waves-effect waves-light">SIGN IN</button>
                                <div class="signin_with mt-3">
                                    <p class="mb-0">or Sign Up using</p>
                                    <button class="btn btn-primary btn-icon btn-icon-mini btn-round facebook"><i class="zmdi zmdi-facebook"></i></button>
                                    <button class="btn btn-primary btn-icon btn-icon-mini btn-round twitter"><i class="zmdi zmdi-twitter"></i></button>
                                    <button class="btn btn-primary btn-icon btn-icon-mini btn-round google"><i class="zmdi zmdi-google-plus"></i></button>
                                </div>
                            </div>
                        }


                    </div>
                    <div class="copyright text-center">
                        &copy;
                        <script>document.write(new Date().getFullYear())</script>,
                        <span><a href="#">LemonCat</a></span>
                    </div>
                </div>
                <div class="col-lg-8 col-sm-12">
                    <div class="card">
                        <img src="~/Areas/Admin/assets/images/signin.svg" alt="Sign In" />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Jquery Core Js -->
    <script src="~/Areas/Admin/assets/bundles/libscripts.bundle.js"></script>
    <script src="~/Areas/Admin/assets/bundles/vendorscripts.bundle.js"></script> <!-- Lib Scripts Plugin Js -->
</body>


</html>
