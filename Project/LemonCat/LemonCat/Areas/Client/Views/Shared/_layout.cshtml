          {
            var searchbar = $("#searchbar").val();
                $.post('/Client/Home/Search', { searchString : searchbar},
                    function (response) {
                        window.location.href = "/Client/Home/Search?searchString=" + searchbar;
                    });
            return false;  
          }
        });   
