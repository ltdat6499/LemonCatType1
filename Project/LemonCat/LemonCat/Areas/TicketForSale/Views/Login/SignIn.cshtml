
@{
    Layout = null;
}

<!doctype html>
<html class="no-js " lang="en">


<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <meta name="description" content="Responsive Bootstrap 4 and web Application ui kit.">

    <title>LemonCat Admin Sign Up</title>
    <!-- Favicon-->
    <link rel="icon" href="~/Areas/Admin/assets/favicon.ico" type="~/Areas/Admin/assets/image/x-icon">
    <!-- Custom Css -->
    <link href="~/Areas/Admin/assets/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Areas/Admin/assets/css/style.min.css" rel="stylesheet">
</head>

<body class="theme-blush">

    <div class="authentication">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-sm-12">
                    <div class="card auth_form">
                        <div class="header">
                            <img class="logo" src="~/Areas/Admin/assets/images/logo.svg" alt="">
                            <h5>Sign Up</h5>
                            <span>Register a new Staff</span>
                        </div>
                        @using (Html.BeginForm("CreateNewStaff", "Login", FormMethod.Post))
                        {
                            <div class="body">
                                <div class="input-group mb-3">
                                    <input id="Username" name="Username" type="text" class="form-control" placeholder="Username">
                                    <div class="input-group-append">
                                        <span class="input-group-text"><i class="zmdi zmdi-account-circle"></i></span>
                                    </div>
                                </div>
                                <div class="input-group mb-3">
                                    <input id="Email" name="Email" type="text" class="form-control" placeholder="Enter Email">
                                    <div class="input-group-append">
                                        <span class="input-group-text"><i class="zmdi zmdi-email"></i></span>
                                    </div>
                                </div>
                                <div class="input-group mb-3">
                                    <input id="Password" name="Password" type="password" class="form-control" placeholder="Password">
                                    <div class="input-group-append">
                                        <span class="input-group-text"><i class="zmdi zmdi-lock"></i></span>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary btn-block waves-effect waves-light">SIGN UP</button>
                                <div class="signin_with mt-3">
                                    <a class="link" href="/TicketForSale/Login">You already have a membership?</a>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="copyright text-center">
                        &copy;
                        <script>document.write(new Date().getFullYear())</script>,
                        <span><a href="templatespoint.net">LemonCat</a></span>
                    </div>
                </div>
                <div class="col-lg-8 col-sm-12">
                    <div class="card">
                        <img src="~/Areas/Admin/assets/images/signup.svg" alt="Sign Up" />
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- Jquery Core Js -->
    <script src="~/Areas/Admin/assets/bundles/libscripts.bundle.js"></script>
    <script src="~/Areas/Admin/assets/bundles/vendorscripts.bundle.js"></script> <!-- Lib Scripts Plugin Js -->
</body>


</html>