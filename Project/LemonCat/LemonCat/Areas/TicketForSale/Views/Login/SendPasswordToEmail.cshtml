
@{
    Layout = null;
}
<!doctype html>
<html class="no-js " lang="en">


<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <meta name="description" content="Responsive Bootstrap 4 and web Application ui kit.">

    <title>LemonCat Staff Reset Password</title>
    <!-- Favicon-->
    <link rel="icon" href="favicon.ico" type="~/Areas/Admin/image/x-icon">
    <!-- Custom Css -->
    <link href="~/Areas/Admin/assets/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Areas/Admin/assets/css/style.min.css" rel="stylesheet">
</head>

<body class="theme-blush">

    <div class="authentication">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-sm-12">
                    <div class="card auth_form">
                        <div class="header">
                            <img class="logo" src="~/Areas/Admin/assets/images/logo.svg" alt="">
                            <h5>Forgot Password?</h5>
                            <span>Enter your e-mail address below to reset your password.</span>
                        </div>
                        @using (Html.BeginForm("SendPasswordToEmailPost", "Login", FormMethod.Post))
                        {
                            <div class="body">
                                <div class="input-group mb-3">
                                    <input type="text" id="email" name="email" autofocus="autofocus" placeholder="Enter Email" class="form-control" />
                                    <div class="input-group-append">
                                        <span class="input-group-text"><i class="zmdi zmdi-email"></i></span>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary btn-block waves-effect waves-light">SUBMIT</button>
                                <div class="signin_with mt-3">
                                    <a href="javascript:void(0);" class="link">Need Help?</a>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="copyright text-center">
                        &copy;
                        <script>document.write(new Date().getFullYear())</script>,
                        <span>Designed by <a href="#">Lý Thành Đạt - Lê Minh Ngọc</a></span>
                    </div>
                </div>
                <div class="col-lg-8 col-sm-12">
                    <div class="card">
                        <img src="~/Areas/Admin/assets/images/signin.svg" alt="Forgot Password" />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Jquery Core Js -->
    <script src="~/Areas/Admin/assets/bundles/libscripts.bundle.js"></script>
    <script src="~/Areas/Admin/assets/bundles/vendorscripts.bundle.js"></script> <!-- Lib Scripts Plugin Js -->
</body>


</html>