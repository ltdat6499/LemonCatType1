@model List<LemonCat.Models.EF.PHIM>
@{
    ViewBag.Title = "BuyTicketIndex";
    Layout = "~/Areas/TicketForSale/Views/Shared/_layout.cshtml";
}
    <section class="content">
        <div class="body_scroll">
            <div class="block-header">
                <div class="row">
                    <div class="col-lg-7 col-md-6 col-sm-12">
                        <h2>Cinema</h2>
                        <ul class="breadcrumb">
                            <li class="breadcrumb-item"><a href="index.html"><i class="zmdi zmdi-home"></i> Staff</a></li>
                            <li class="breadcrumb-item">Cinema</li>
                            <li class="breadcrumb-item active">Movie</li>
                        </ul>
                        <button class="btn btn-primary btn-icon mobile_menu" type="button"><i class="zmdi zmdi-sort-amount-desc"></i></button>
                    </div>
                    <div class="col-lg-5 col-md-6 col-sm-12">
                        <button class="btn btn-primary btn-icon float-right right_icon_toggle_btn" type="button"><i class="zmdi zmdi-arrow-right"></i></button>
                    </div>
                </div>
            </div>
            <div class="container-fluid">
                <div class="row clearfix">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6">
                            <div class="card">
                                <div class="body product_item">
                                    <img style="width:230px;" src="@((Model[i]).AnhDaiDien)" alt="Product" class="img-fluid cp_img" />
                                    <div class="product_details">
                                        <ul class="product_price list-unstyled">
                                        </ul>
                                    </div>
                                    <div class="action">
                                        <a href="/TicketForSale/Home/BuyTicket?id=@((Model[i]).MaPhim)" class="btn btn-info waves-effect"><i class="zmdi zmdi-eye"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>