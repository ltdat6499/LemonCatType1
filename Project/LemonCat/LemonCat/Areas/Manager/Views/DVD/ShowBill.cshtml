@model LemonCat.Models.EF.HOADON
@{
    ViewBag.Title = "ShowBill";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}
<section class="content">
    <div class="body_scroll">
        <div class="block-header">
            <div class="row">
                <div class="col-lg-7 col-md-6 col-sm-12">
                    <h2>DVD</h2>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#"><i class="zmdi zmdi-home"></i> Manager</a></li>
                        <li class="breadcrumb-item active">DVD</li>
                        <li class="breadcrumb-item active">Invoice</li>
                    </ul>
                    <button class="btn btn-primary btn-icon mobile_menu" type="button"><i class="zmdi zmdi-sort-amount-desc"></i></button>
                </div>
                <div class="col-lg-5 col-md-6 col-sm-12">
                    <button class="btn btn-primary btn-icon float-right right_icon_toggle_btn" type="button"><i class="zmdi zmdi-arrow-right"></i></button>
                </div>
            </div>
        </div>
        <div class="container-fluid" id="print">
            <div class="row clearfix">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="body">
                            <h5><strong>Order ID: </strong> #@Model.MaHoaDon</h5>
                            <div class="row">
                                <div class="col-md-6 col-sm-6">
                                    <address>
                                        <strong>Name: @Model.Name</strong><br>
                                        Address: @Model.Address<br>
                                        <span title="Phone">Phone: </span> @Model.Phone
                                    </address>
                                </div>
                                <div class="col-md-6 col-sm-6 text-right">
                                    <p class="mb-0"><strong>Order Date: </strong> @Model.NgayLapHoaDon</p>
                                    <p class="mb-0">
                                        <strong>Order Status: </strong>
                                        @if (Model.Status == 1)
                                        {
                                            <span class="badge badge-success">Success</span>
                                        }
                                        else if (Model.Status == 2)
                                        {
                                            <span class="badge badge-warning">Watting</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-danger">Deny</span>
                                        }
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="table-responsive">
                                    <table class="table table-hover c_table theme-color">
                                        <thead>
                                            <tr>
                                                <th width="60px">Item</th>
                                                <th></th>
                                                <th>Quantity</th>
                                                <th class="hidden-sm-down">Unit Cost</th>
                                                <th>Total</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in ViewBag.ChildBill)
                                            {
                                                <tr>
                                                    <td><img src="@item.Avata" width="40" alt="Product img"></td>
                                                    <td>@item.NameDVD</td>
                                                    <td>@item.SoLuong</td>
                                                    <td class="hidden-sm-down">$@item.DonGia</td>
                                                    <td>$@item.ThanhTien</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="body">
                            <div class="row">
                                <div class="col-md-6">
                                    <h5>Note</h5>
                                    <p>@Model.Note</p>
                                </div>
                                <div class="col-md-6 text-right">
                                    <h3 class="mb-0 text-success">USD @Model.TongTien</h3>
                                    <a href="#" onclick="printDiv('print')" class="btn btn-info zmdi zmdi-print"></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    function printDiv(divName){
			var printContents = document.getElementById(divName).innerHTML;
			var originalContents = document.body.innerHTML;
			document.body.innerHTML = printContents;
			window.print();
			document.body.innerHTML = originalContents;
		}
</script>